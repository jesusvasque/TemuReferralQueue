{
  "name": "temu-referidos-backend",
  "version": "1.0.0",
  "description": "Backend API for Temu Referidos Colombia",
  "main": "dist-backend/index-render.js",
  "type": "module",
  "scripts": {
    "start": "node dist-backend/index-render.js",
    "build": "esbuild server/index-render.ts --platform=node --packages=external --bundle --format=esm --outdir=dist-backend",
    "build:deps": "npm install --production",
    "deploy": "npm run build && npm run start",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "ws": "^8.18.0",
    "@neondatabase/serverless": "^0.10.4",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.13",
    "@types/node": "20.16.11",
    "drizzle-kit": "^0.30.4",
    "esbuild": "^0.25.0",
    "typescript": "5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
